# FlyByWire EFB Next.js Edition - Environment Configuration
# Copy this file to .env.local and modify values as needed

# Application Environment
NEXT_PUBLIC_APP_ENV=development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Build Configuration
NEXT_PUBLIC_BUILD_VERSION=1.0.0
NEXT_PUBLIC_BUILD_DATE=

# Debug Settings (Development Only)
NEXT_PUBLIC_DEBUG=false

# Analytics (Optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Theme Configuration (Optional overrides)
NEXT_PUBLIC_THEME_PRIMARY=#00c9e4
NEXT_PUBLIC_THEME_BACKGROUND=#0E131B

# Performance Settings
NEXT_PUBLIC_PERFORMANCE_MONITORING=false

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_SOUND_EFFECTS=false
NEXT_PUBLIC_ENABLE_TELEMETRY=false

# Development Tools
NEXT_PUBLIC_SHOW_GRID=false
NEXT_PUBLIC_SHOW_DEBUG_INFO=false